ZIV_SYMBOL_TOKEN(Colon, ":")
ZIV_SYMBOL_TOKEN(Semicolon, ";")


// Keywords
ZIV_KEYWORD_TOKEN(Let, "let")
ZIV_KEYWORD_TOKEN(Const, "const")
