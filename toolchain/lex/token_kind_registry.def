#ifndef ZIV_TOKEN
#define ZIV_TOKEN(NAME)
#endif

#ifndef ZIV_SYMBOL_TOKEN
#define ZIV_SYMBOL_TOKEN(NAME, VALUE) ZIV_TOKEN(NAME)
#endif

#ifndef ZIV_KEYWORD_TOKEN
#define ZIV_KEYWORD_TOKEN(NAME, VALUE) ZIV_TOKEN(NAME)
#endif

// Symbols (operators and punctuation)
ZIV_SYMBOL_TOKEN(Arrow, "->")
ZIV_SYMBOL_TOKEN(DoubleDot, "..")
ZIV_SYMBOL_TOKEN(DoubleArrow, ">>")
ZIV_SYMBOL_TOKEN(DoubleEquals, "==")
ZIV_SYMBOL_TOKEN(NotEquals, "!=")
ZIV_SYMBOL_TOKEN(LessEquals, "<=")
ZIV_SYMBOL_TOKEN(GreaterEquals, ">=")
ZIV_SYMBOL_TOKEN(PlusEquals, "+=")
ZIV_SYMBOL_TOKEN(MinusEquals, "-=")
ZIV_SYMBOL_TOKEN(StarEquals, "*=")
ZIV_SYMBOL_TOKEN(SlashEquals, "/=")
ZIV_SYMBOL_TOKEN(Increment, "++")
ZIV_SYMBOL_TOKEN(Decrement, "--")
ZIV_SYMBOL_TOKEN(Less, "<")
ZIV_SYMBOL_TOKEN(Greater, ">")
ZIV_SYMBOL_TOKEN(Plus, "+")
ZIV_SYMBOL_TOKEN(Minus, "-")
ZIV_SYMBOL_TOKEN(Star, "*")
ZIV_SYMBOL_TOKEN(Slash, "/")
ZIV_SYMBOL_TOKEN(Percent, "%")
ZIV_SYMBOL_TOKEN(Equals, "=")
ZIV_SYMBOL_TOKEN(Bang, "!")
ZIV_SYMBOL_TOKEN(Ampersand, "&")
ZIV_SYMBOL_TOKEN(Caret, "^")
ZIV_SYMBOL_TOKEN(Tilde, "~")
ZIV_SYMBOL_TOKEN(Pipe, "|")
ZIV_SYMBOL_TOKEN(Dot, ".")
ZIV_SYMBOL_TOKEN(At, "@") // Decorator

// Delimiters
ZIV_SYMBOL_TOKEN(LParen, "(")
ZIV_SYMBOL_TOKEN(RParen, ")")
ZIV_SYMBOL_TOKEN(LBrace, "{")
